/************************************************************************************
 * aegis特有でなく、ほかのプロジェクトでも使用可能な
 * アプリケーション全体で使用するCSSを記述する
*************************************************************************************/


body {
	margin: 0px;
	padding: 0px;
}
*{
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0); /* Androidタッチリンク削除 */
}




/** スクラッチアイテム獲得後画面 */
@-webkit-keyframes 'allrotation' {
	0% { -webkit-transform: rotate(0deg); }
	100% { -webkit-transform: rotate(360deg); }
}

@-webkit-keyframes 'myzoombounds' {
0% {-webkit-transform: scale(0.1); }
70% {-webkit-transform: scale(2.0) }
100% {-webkit-transform: scale(1.0); }
}

@-webkit-keyframes 'itemgot' {
0% {-webkit-transform: scale(2.0); opacity: 0; }
100% {-webkit-transform: scale(1.0); opacity: 1; }
}
